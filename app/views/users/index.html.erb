<h1 class="text-2xl font-bold mb-4">Users</h1>
<%= link_to 'Logout', auth_logout_path, method: :get, class: "bg-red-500 text-gray-100 hover:bg-red-700 py-2 px-4 rounded" %>


<table class="min-w-full bg-white">
  <thead>
  <%= paginate @users %>
  <tr>
    <th class="py-2 px-4 border-b">Email</th>
    <th class="py-2 px-4 border-b">Name</th>
    <th class="py-2 px-4 border-b">Status</th>
    <th class="py-2 px-4 border-b">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td class="py-2 px-4 border-b"><%= user.email %></td>
      <td class="py-2 px-4 border-b"><%= user.name %></td>
      <td class="py-2 px-4 border-b"><%= user.status %></td>
      <td class="py-2 px-4 border-b">
        <%= link_to 'Show', user_path(user), class: "text-blue-500 hover:underline" %>
        <%= link_to 'Edit', edit_user_path(user), class: "text-yellow-500 hover:underline" %>
        <%#= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 hover:underline" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New User', new_user_path, class: "mt-4 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>


